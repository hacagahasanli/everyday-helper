{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "node",

    "lib": ["ES2020", "DOM"], 

    "types": ["node", "react"],
    "typeRoots": ["./node_modules/@types"],

    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": [
    "**/*.test.*",
    "node_modules",
    "dist"
  ]
}
