    "@types/node": "^25.0.9",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@types/react-router-dom": "^5.3.3",
    "@vitest/coverage-v8": "^2.1.0",
    "@vitest/ui": "^2.1.0",
    "copyfiles": "^2.4.1",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "happy-dom": "^15.0.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "semantic-release": "^24.2.9",
    "tsup": "^8.5.1",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vitest": "^2.1.0"
  },
  "dependencies": {}
